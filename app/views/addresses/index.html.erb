<h1>My Addresses</h1>

<%= link_to "Add New Address", new_address_path, class: "btn btn-primary mb-4" %>

<% if @addresses.any? %>
  <div class="row">
    <% @addresses.each do |address| %>
      <div class="col-md-6 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Address</h5>
            <p class="card-text">
              <%= address.street %><br>
              <%= address.city %>, <%= address.province.name %><br>
              <%= address.postal_code %>
            </p>
            <div class="d-flex gap-2">
              <%= link_to "Edit", edit_address_path(address), class: "btn btn-sm btn-warning" %>
              <%= button_to "Delete", address_path(address), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Delete this address?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    You don't have any saved addresses yet.
  </div>
<% end %>