<%= form_with(model: @address, local: true) do |f| %>
  <% if @address.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h4>
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :street, class: "form-label" %>
    <%= f.text_field :street, class: "form-control", placeholder: "123 Main St" %>
  </div>

  <div class="mb-3">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, class: "form-control", placeholder: "Winnipeg" %>
  </div>

  <div class="mb-3">
    <%= f.label :province_id, "Province", class: "form-label" %>
    <%= f.collection_select :province_id, Province.all.order(:name), :id, :name,
        { prompt: "Select a province" }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= f.label :postal_code, class: "form-label" %>
    <%= f.text_field :postal_code, class: "form-control", placeholder: "R3C 0V8" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", addresses_path, class: "btn btn-secondary" %>
  </div>
<% end %>