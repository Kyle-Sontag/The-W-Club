<!-- Hero Banner -->
<div class="bg-primary text-white text-center py-5 mb-5 rounded">
  <h1 class="display-4 fw-bold">The W Club</h1>
  <p class="lead">Official store for the Winnipeg Blue Bombers</p>
</div>

<!-- Search Bar Section -->
<div class="card mb-5">
  <div class="card-body">
    <h4 class="card-title mb-3">Search Products</h4>
    <%= form_with url: search_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-5">
        <%= f.label :query, "Search", class: "form-label" %>
        <%= f.text_field :query, placeholder: "Search by name or description...", class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :category_id, "Category", class: "form-label" %>
        <%= f.select :category_id,
            options_from_collection_for_select(Category.all, :id, :name),
            { prompt: "All Categories" },
            { class: "form-select" } %>
      </div>

      <div class="col-md-2">
        <%= f.label :sort, "Sort by", class: "form-label" %>
        <%= f.select :sort,
            options_for_select([
              ['Name (A-Z)', 'name_asc'],
              ['Name (Z-A)', 'name_desc'],
              ['Price (Low to High)', 'price_asc'],
              ['Price (High to Low)', 'price_desc']
            ]),
            {},
            { class: "form-select" } %>
      </div>

      <div class="col-md-2 d-flex align-items-end">
        <%= f.submit "Search", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Featured Products Section -->
<% if @featured_products.any? %>
  <section class="mb-5">
    <h2 class="mb-4">Featured Products</h2>

    <div class="overflow-auto">
      <div class="d-flex gap-3 pb-3">
        <%= render partial: 'product_card_horizontal', collection: @featured_products, as: :product %>
      </div>
    </div>
  </section>
<% end %>

<!-- Sale Products Section -->
<section class="mb-5">
  <h2 class="mb-4">Items on Sale</h2>

  <div class="overflow-auto">
    <div class="d-flex gap-3 pb-3">
      <%= render partial: 'product_card_horizontal', collection: @sale_products, as: :product %>
    </div>
  </div>
</section>