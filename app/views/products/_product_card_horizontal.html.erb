<div class="card flex-shrink-0" style="width: 250px;">
  <% if product.image.attached? %>
    <%= image_tag product.image, alt: product.name, class: "card-img-top" %>
  <% else %>
    <div class="card-img-top bg-secondary text-white text-center py-5">No Image</div>
  <% end %>

  <div class="card-body">
    <h5 class="card-title">
      <%= link_to product.name, product_path(product), class: "text-decoration-none text-truncate d-block" %>
    </h5>
    <p class="card-text text-muted small"><%= product.category.name %></p>

    <% if product.sale_price %>
      <p class="text-decoration-line-through text-muted mb-1">
        $<%= number_with_precision(product.price, precision: 2) %>
      </p>
      <p class="text-danger fw-bold mb-0">
        Sale: $<%= number_with_precision(product.sale_price, precision: 2) %>
      </p>
    <% else %>
      <p class="fw-bold mb-0">
        $<%= number_with_precision(product.price, precision: 2) %>
      </p>
    <% end %>
  </div>
</div>