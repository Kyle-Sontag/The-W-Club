<h1>Shopping Cart</h1>

<%= link_to "â† Continue Shopping", session[:return_to] || root_path, class: "btn btn-secondary mb-4" %>

<% if @cart_items.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <% if item.product.image.attached? %>
                  <%= image_tag item.product.image.variant(:thumb), class: "me-3", style: "width: 50px; height: 50px; object-fit: contain;" %>
                <% end %>
                <div>
                  <%= link_to item.product.name, product_path(item.product) %>
                  <br>
                  <small class="text-muted"><%= item.product.category.name %></small>
                </div>
              </div>
            </td>
            <td>$<%= number_with_precision(item.product.current_price, precision: 2) %></td>
            <td>
              <%= form_with url: cart_item_path(item), method: :patch, local: true, class: "d-flex align-items-center" do |f| %>
                <%= f.number_field :quantity, value: item.quantity, min: 1, class: "form-control form-control-sm", style: "width: 80px;", onchange: "this.form.submit()" %>
              <% end %>
            </td>
            <td>$<%= number_with_precision(item.total_price, precision: 2) %></td>
            <td>
              <%= button_to "Remove", cart_item_path(item), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Remove this item?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="text-end"><strong>Total:</strong></td>
          <td colspan="2"><strong>$<%= number_with_precision(@cart.total_price, precision: 2) %></strong></td>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="d-flex justify-content-end gap-2 mt-4">
    <%= link_to "Continue Shopping", session[:return_to] || root_path, class: "btn btn-secondary" %>
    <%= link_to "Proceed to Checkout", "#", class: "btn btn-primary" %>
  </div>
<% else %>
  <div class="alert alert-info">
    Your cart is empty. <%= link_to "Start shopping!", root_path %>
  </div>
<% end %>